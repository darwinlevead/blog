const social = [
	{ label: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/darwinlevead' },
	{ label: 'Instagram', icon: 'tabler:brand-instagram', href: 'https://instagram.com/darwinlevead' },
	{ label: 'Facebook', icon: 'tabler:brand-facebook', href: 'https://facebook.com/darwinlevead' },
	{ label: 'RSS', icon: 'tabler:rss', href: getRelativeLink('/rss.xml') },
	{ label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/darwinlevead' },
